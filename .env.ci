# BuildTrack Pro CI Environment Configuration
# This file is used specifically in CI/CD environments

# Disable SSR for problematic components during build
NEXT_PUBLIC_DISABLE_SSR_IN_CI=true

# Skip connecting to Supabase during build time (critical)
SKIP_SUPABASE_INIT_ON_BUILD=true

# Feature flags for BuildTrack Pro CI builds
NEXT_PUBLIC_FEATURE_MOCK_IMAGES=true
NEXT_PUBLIC_CI_BUILD=true

# Add buildtime placeholders that are replaced by actual values in the CI environment
NEXT_PUBLIC_SUPABASE_URL=https://placeholder-for-ci.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=placeholder-key-replaced-in-ci
